@model GlassLewis.WebApp.MVC.Models.CompanyViewModel

@{ ViewData["Title"] = "Edit Company"; }

<vc:summary></vc:summary>

<section class="col-md-6">
    <div class="col-12">
        <div class="row">
            <div class="col-12">
                <h4>Edit Company</h4>
            </div>
        </div>
    </div>
    <hr />

    <div>
        <form id="form-Edit" asp-action="Edit" asp-controller="Company">
            <input hidden asp-for="Id" />
            <div class="form-row">

                <div class="form-group col-12">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label asp-for="Exchange" class="control-label"></label>
                    <input asp-for="Exchange" class="form-control" />
                    <span asp-validation-for="Exchange" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label asp-for="StockTicker" class="control-label"></label>
                    <input asp-for="StockTicker" class="form-control" />
                    <span asp-validation-for="StockTicker" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label asp-for="ISIN" class="control-label"></label>
                    <input asp-for="ISIN" class="form-control" />
                    <span asp-validation-for="ISIN" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-12">
                    <label asp-for="Website" class="control-label"></label>
                    <input asp-for="Website" class="form-control" />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group col-12 text-right">
                <button type="reset" class="btn btn-primary">Reset</button>
                <button type="submit" class="btn btn-success" id="btn-edit">Confirm</button>
            </div>

        </form>
    </div>

</section>
